{
    "name": "slim/slim-skeleton",
    "description": "A Slim Framework skeleton application for rapid development",
    "keywords": [
        "microframework",
        "rest",
        "router",
        "psr7"
    ],
    "homepage": "http://github.com/slimphp/Slim-Skeleton",
    "license": "MIT",
    "minimum-stability": "dev",
    "authors": [
        {
            "name": "Josh Lockhart",
            "email": "info@joshlockhart.com",
            "homepage": "http://www.joshlockhart.com/"
        },
        {
            "name": "Pierre Berube",
            "email": "pierre@lgse.com",
            "homepage": "http://www.lgse.com/"
        }
    ],
    "repositories": [
        {
            "type": "path",
            "url": "../../slim-auto-instrumentation/opentelemetry-php-contrib/src/Instrumentation/Slim",
            "options": {
                "symlink": false
            }
        }
    ],
    "require": {
        "php": "^7.4 || ^8.0",
        "ext-json": "*",
        "guzzlehttp/psr7": "2.4.x-dev",
        "monolog/monolog": "^2.8",
        "open-telemetry/api": "dev-main",
        "open-telemetry/opentelemetry-auto-slim": "@dev",
        "open-telemetry/sdk-contrib": "dev-main",
        "php-di/php-di": "^6.4",
        "php-http/curl-client": "2.x-dev",
        "php-http/discovery": "^1.14",
        "php-http/message": "^1.13",
        "slim/psr7": "^1.5",
        "slim/slim": "^4.10",
        "symfony/http-client": "6.2.x-dev"
    },
    "require-dev": {
        "jangregor/phpstan-prophecy": "^1.0.0",
        "phpspec/prophecy-phpunit": "^2.0",
        "phpstan/extension-installer": "^1.1.0",
        "phpstan/phpstan": "^1.8",
        "phpunit/phpunit": "^9.5.25",
        "squizlabs/php_codesniffer": "^3.7",
        "open-telemetry/sdk": "dev-main"
    },
    "config": {
        "allow-plugins": {
            "phpstan/extension-installer": true
        },
        "process-timeout": 0,
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "start": "php -S localhost:8080 -t public",
        "test": "phpunit"
    }
}
